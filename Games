/* This tells the row to arrange its children (the boxes) in a row */
.five-box-row {
  display: flex; /* Use flexbox for easy alignment */
  flex-wrap: wrap; /* Allows boxes to wrap to the next line on small screens */
  justify-content: center; /* Center the boxes in the row */
  gap: 20px; /* Adds some space between the boxes */
}

/* This styles each individual game box */
.game-box {
  width: 200px; /* Give each box a fixed width */
  border: 1px solid #ccc; /* Add a light border */
  border-radius: 8px; /* Round the corners */
  overflow: hidden; /* Keep the image corners rounded */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
  cursor: pointer; /* Change the mouse to a pointer on hover */
  transition: transform 0.2s; /* Add a slight zoom effect on hover */
}

/* Make the image fill the width of the box */
.game-box img {
  width: 100%;
  display: block; /* Removes any weird spacing below the image */
}

/* Style the game title text */
.game-title {
  text-align: center;
  padding: 10px;
  font-family: Arial, sans-serif; /* Use a clean font */
  font-weight: bold;
  background-color: #f9f9f9; /* Light background for the title */
}

/* Add the zoom effect on hover */
.game-box:hover {
  transform: scale(1.05);
}
